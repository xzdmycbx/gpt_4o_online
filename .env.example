# Environment Configuration
ENV=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Frontend URL Configuration
# IMPORTANT: In production, set this to your actual frontend domain
# Examples:
#   - Same origin: Leave empty or set to ""
#   - Different origin: FRONTEND_URL=https://your-frontend-domain.com
# This is used for OAuth2 redirects and CORS configuration
FRONTEND_URL=http://localhost:3000

# Trusted Proxies Configuration
# IMPORTANT: Configure this if using reverse proxy (Nginx, CloudFlare, AWS ALB, etc.)
# For CloudFlare, use CloudFlare IP ranges (comma-separated)
# Example: TRUSTED_PROXIES=173.245.48.0/20,103.21.244.0/22,103.22.200.0/22,103.31.4.0/22,141.101.64.0/18,108.162.192.0/18,190.93.240.0/20,188.114.96.0/20,197.234.240.0/22,198.41.128.0/17,162.158.0.0/15,104.16.0.0/13,104.24.0.0/14,172.64.0.0/13,131.0.72.0/22
# For local development, leave empty or use: TRUSTED_PROXIES=127.0.0.1,::1
TRUSTED_PROXIES=

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=ai_chat_user
DB_PASSWORD=change_this_password_in_production
DB_NAME=ai_chat_db
DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=change_this_secret_key_in_production_use_long_random_string
JWT_EXPIRATION_HOURS=24

# OAuth2 Configuration (X.com/Twitter)
OAUTH2_TWITTER_CLIENT_ID=your_twitter_client_id
OAUTH2_TWITTER_CLIENT_SECRET=your_twitter_client_secret
OAUTH2_TWITTER_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth2/callback

# GeoIP Configuration
GEOIP_DB_PATH=/app/data/GeoLite2-Country.mmdb
GEOIP_BLOCK_CHINA=true

# Rate Limiting Configuration
# Default rate limit for all users (can be overridden per user by admin in backend)
RATE_LIMIT_DEFAULT_PER_MINUTE=20

# Email Configuration
EMAIL_PROVIDER=smtp # smtp or resend
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=AI Chat <noreply@your-domain.com>
RESEND_API_KEY=your_resend_api_key

# Encryption Configuration
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# AI Model Configuration
DEFAULT_MEMORY_MODEL=gpt-3.5-turbo
MEMORY_EXTRACTION_ENABLED=true

# Super Admin Configuration (Created on first startup)
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_PASSWORD=change_this_password_in_production
SUPER_ADMIN_EMAIL=admin@example.com
